<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Section 1: User Identifier -->
    <EditText
        android:id="@+id/etUserIdentifier"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter User Email/Phone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Section 2: Vehicle Selection -->
    <Spinner
        android:id="@+id/spinnerVehicleSelection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etUserIdentifier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Section 3: Permission Presets Header -->


    <!-- Section 4: Access Levels -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:text="Permission Presets"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <RadioGroup
        android:id="@+id/radioGroupAccessLevel"
        android:layout_width="230dp"
        android:layout_height="103dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/divider">

        <RadioButton
            android:id="@+id/radioFullAccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Access" />

        <RadioButton
            android:id="@+id/radioCustomAccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom Access" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Permissions"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider3" />

    <!-- Section 5: Permissions (Grid Style) -->
    <LinearLayout
        android:id="@+id/permissionsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- First Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkboxTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Temperature" />

            <CheckBox
                android:id="@+id/checkboxLocks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Locks" />
        </LinearLayout>

        <!-- Second Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkboxLights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Lights" />

            <CheckBox
                android:id="@+id/checkboxExtra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extra Feature" />
        </LinearLayout>
    </LinearLayout>

    <!-- Section 6: Grant Access Button -->
    <Button
        android:id="@+id/btnGrantAccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Update Access"
        app:layout_constraintTop_toBottomOf="@id/permissionsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="40dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@+id/spinnerVehicleSelection"
        tools:layout_editor_absoluteX="-14dp" />

    <View
        android:id="@+id/divider3"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="40dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupAccessLevel"
        tools:layout_editor_absoluteX="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
