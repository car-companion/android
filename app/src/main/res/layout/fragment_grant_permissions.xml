<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Section 1: User Identifier -->
    <EditText
        android:id="@+id/et_user_identifier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/user_identifier_hint" />

    <!-- Section 2: Vehicle Selection -->
    <Spinner
        android:id="@+id/spinner_vehicle_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_user_identifier"
        android:layout_marginTop="16dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/spinner_vehicle_selection"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider" />

    <!-- Section 3: Permission Presets -->
    <TextView
        android:id="@+id/tv_permission_presets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginTop="16dp"
        android:text="@string/permission_presets_title"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radio_group_access_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_permission_presets"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_full_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/full_access_option" />

        <RadioButton
            android:id="@+id/radio_custom_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/custom_access_option" />
    </RadioGroup>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/radio_group_access_level"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider" />

    <!-- Section 4: Permissions -->
    <TextView
        android:id="@+id/tv_permissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2"
        android:layout_marginTop="16dp"
        android:text="@string/permissions_title"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/permissions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_permissions"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- First Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkbox_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manage_temperature" />

            <CheckBox
                android:id="@+id/checkbox_locks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manage_vehicle_locks" />

            <CheckBox
                android:id="@+id/checkbox_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/access_vehicle_battery" />

            <CheckBox
                android:id="@+id/checkbox_rooftop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manage_rooftop" />
        </LinearLayout>

        <!-- Second Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkbox_lights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manage_lights" />

            <CheckBox
                android:id="@+id/checkbox_trunk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manage_trunk" />

            <CheckBox
                android:id="@+id/checkbox_systems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/access_vehicle_systems" />

            <CheckBox
                android:id="@+id/checkbox_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/extra_features" />
        </LinearLayout>
    </LinearLayout>

    <!-- Section 5: Grant Access Button -->
    <Button
        android:id="@+id/btn_grant_access"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/permissions_layout"
        android:layout_marginTop="24dp"
        android:text="@string/update_access_button" />

    <TextView
        android:id="@+id/tv_show_vehicles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_grant_access"
        android:layout_marginTop="20dp"
        android:text="@string/no_vehicles_available" />
</RelativeLayout>
